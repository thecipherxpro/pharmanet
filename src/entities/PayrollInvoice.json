{
  "name": "PayrollInvoice",
  "type": "object",
  "properties": {
    "shift_id": {
      "type": "string",
      "description": "Shift ID"
    },
    "employer_id": {
      "type": "string",
      "description": "Employer user ID"
    },
    "pharmacist_id": {
      "type": "string",
      "description": "Pharmacist user ID"
    },
    "gross_amount": {
      "type": "number",
      "description": "Gross amount in CAD"
    },
    "include_deductions": {
      "type": "boolean",
      "default": false,
      "description": "Whether tax deductions are included"
    },
    "deductions": {
      "type": "object",
      "properties": {
        "cpp": {
          "type": "number"
        },
        "ei": {
          "type": "number"
        },
        "federal_tax": {
          "type": "number"
        },
        "ontario_tax": {
          "type": "number"
        }
      },
      "description": "Tax deductions breakdown"
    },
    "net_amount": {
      "type": "number",
      "description": "Net amount after deductions"
    },
    "pdf_url": {
      "type": "string",
      "description": "URL to the PDF invoice"
    },
    "sent_to_pharmacist": {
      "type": "boolean",
      "default": false,
      "description": "Whether invoice was sent to pharmacist"
    }
  },
  "required": [
    "shift_id",
    "employer_id",
    "pharmacist_id",
    "gross_amount",
    "net_amount"
  ]
}