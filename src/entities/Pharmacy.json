{
  "name": "Pharmacy",
  "type": "object",
  "properties": {
    "pharmacy_name": {
      "type": "string",
      "description": "Name of the pharmacy"
    },
    "address": {
      "type": "string",
      "description": "Street address"
    },
    "city": {
      "type": "string",
      "description": "City"
    },
    "province": {
      "type": "string",
      "default": "ON",
      "description": "Province (Ontario)"
    },
    "postal_code": {
      "type": "string",
      "description": "Postal code"
    },
    "phone": {
      "type": "string",
      "description": "Pharmacy phone number"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Pharmacy email"
    },
    "manager_name": {
      "type": "string",
      "description": "Pharmacy manager name"
    },
    "software": {
      "type": "string",
      "enum": [
        "Kroll",
        "Paperless Kroll",
        "Fillware",
        "PharmaClik",
        "Nexxsys",
        "Commander",
        "Assyst",
        "PrimeRx",
        "McKesson",
        "Other"
      ],
      "description": "Pharmacy management software"
    },
    "is_active": {
      "type": "boolean",
      "default": true,
      "description": "Whether the pharmacy is actively posting shifts"
    }
  },
  "required": [
    "pharmacy_name",
    "address",
    "city",
    "postal_code",
    "phone"
  ]
}